<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.as.pagedb.dao.NovelDao">

    <resultMap id="BaseResultMap" type="pers.as.pagedb.entity.Novel">
        <!--@Table novel-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="novelname" column="novelname" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="img" column="img" jdbcType="VARCHAR"/>
        <result property="comments" column="comments" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <select id = "getById" parameterType="Integer" resultType="pers.as.pagedb.entity.Novel">
        select
            id, novelname, author, img, comments, description
        from aspage.novel
        where id = #{id}
    </select>

    <select id="getList" resultType="pers.as.pagedb.entity.Novel">
        select
            id, novelname, author, img, comments, description
        from aspage.novel limit 10
    </select>

</mapper>